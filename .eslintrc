{
    "extends": "eslint:recommended",
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parser": "babel-eslint",
    "plugins": [
    ],
    "rules": {
        "eqeqeq": 2,
        "no-var" : 2,
        "no-alert": 2,
        "no-console": 1,
        "quotes": [
            1,
            "single"
        ],
        "semi": [
            2,
            "always"
        ],
        "strict": [
            1,
            "global"
        ],
        "space-infix-ops": 2,
        "space-in-parens": 2,
        "space-unary-ops": 2,
        "no-trailing-spaces": 1,
        "no-irregular-whitespace": 2,
        "no-unused-vars": [
            2,
            {
                "vars": "all",
                "args": "all",
                "argsIgnorePattern": "^__unused__"
            }
        ]
    }
}
